<div class="row">
    <div class="container login">
    <div class="col-md-6">
        <h1>Login</h1>

        <form class="form login-form">
            <div class="form-group">

                <label for="email-login"></label>
                <input class="form-input email-login" type="text" id="email-login" placeholder="Email" />
            </div>
            <div class="form-group">
                <label for="password-login"></label>
                <input class="form-input" type="password" id="password-login" placeholder="Password" />
            </div>
            <div class="form-group">
                <button class="btn btn-primary password-login" type="submit">login</button>
            </div>
        </form>
    </div>
    </div>
  <div class="container signup">
    <div class="col-md-6">
        <h1>Signup</h1>

        <form class="form signup-form">
            <div class="form-group">
                <label for="name-signup"></label>
                <input class="form-input name-signup" type="text" id="name" placeholder="Name" />

            </div>
            <div class="form-group">
                <label for="email-signup"></label>
                <input class="form-input email-signup" type="text" id="email-signup" placeholder="Email" />
            </div>
            <div class="form-group">
                <label for="password-signup"></label>
                <input class="form-input password-signup" type="password" id="password-signup" placeholder="Password" />
            </div>
            <div class="form-group">
                <button class="btn btn-primary" type="submit">signup</button>
            </div>
        </form>
    </div>
   </div>
</div>


<script src="./js/login.js"></script>
